{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",       // Build ra thư mục dist
      "rootDir": "./src",       // Source code nằm trong src
      "strict": true,
      "esModuleInterop": true
